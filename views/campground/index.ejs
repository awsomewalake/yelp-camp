<% layout('/layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new">Add New Campground</a>
    <% for( let i of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=i.image%> " alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=i.title %>
                        </h5>
                        <p class="card-text">
                            <%=i.description %>
                        </p>
                        <p>
                            <small class="text-muted"><%=i.location %> </small>
                        </p>
                        <a href="/campgrounds/<%=i._id%>" class="btn btn-primary">View <%=i.title %> </a>
                    </div>
                </div>
            </div>

        </div>
        <% } %>