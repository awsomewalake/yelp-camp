<% layout('/layouts/boilerplate') %>
    <h1>Edit Campground</h1>
    <form action="/campgrounds/" method="post">
        <div>
            <label for="title">Title</label>
            <input type="text" value="<%=camp.title%>" id="title" name="campground[title]">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" value="<%=camp.location%>" id="location" name="campground[location]">
        </div>
        <button type="submit">Add Campground</button>
    </form>
    <a href="/campgrounds">INDEX</a>